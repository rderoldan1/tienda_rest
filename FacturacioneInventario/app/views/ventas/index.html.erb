<h1>Listing ventas</h1>

<table>
  <tr>
    <th>Factura</th>
    <th>Producto</th>
    <th>Cantidad</th>
    <th>Precio</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ventas.each do |venta| %>
  <tr>
    <td><%=  venta.id %></td>
    <td><%= venta.producto_id %></td>
    <td><%= venta.cantidad %></td>
    <td><%= venta.precio %></td>
    <td><%= link_to 'Show', venta %></td>
    <td><%= link_to 'Edit', edit_venta_path(venta) %></td>
    <td><%= link_to 'Destroy', venta, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

